<%- contentFor('meta') %>
<title>Home Page</title>

<%- contentFor('styles') %>

<%- contentFor('scripts') %>

<%- contentFor('body') %>
<div class="d-flex justify-content-center">
  <% if (posts.length > 0) { %>
    <ul id="post-list" class="list-unstyled">
      <% posts.forEach(function(post){ %>
        <div class="card m-5" style="width: 30rem;" data-id="<%= post.id %>">
          <div class="card-header"><img class="post-avatar mr-2" src="<%=post.User.avatar%>"><%=post.User.username%></div>
          <img class="card-img-top" src="<%= post.photo %>" alt="Card image cap">

          <div class="card-body">
            <h5 class="card-title"><%= post.caption %></h5>
            <h6 class="card-subtitle mb-2 text-muted">By <%= post.User.username %> @ <%= moment(post.createdAt).format('YYYY/MM/DD') %></h6>
            <div class="card-text mb"><%= post.content %></div>
          </div>
        </div>
        <% }) %>
    </ul>
  <% } else { %>
    <div>No Posts</div>
  <% } %>
  
</div>