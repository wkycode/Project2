<div class="modal fade" id="postEditModal" tabindex="-1" role="dialog" aria-labelledby="postEditModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="postEditModalLabel">Edit</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="postEdit-form">
          <div class="form-group">
            <label for="postEdit-caption">Caption</label>
            <input type="text" class="form-control" id="postEdit-caption" name="caption">
          </div>
          <div class="form-group">
            <label for="postEdit-content">Content</label>
            <input type="text" class="form-control" id="postEdit-content" name="content">
          </div>
          <div class="mt-4 mb-2 border-bottom row"></div>
          <div class="container text-right">
            <button type="submit" class="post-submit btn btn-light"><i class="fas fa-check"></i></button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $postEditModal = $('#postEditModal')
  
    $('#postEdit-form').on('submit', function(e) {
      e.preventDefault()

      const postID = $(e.target).data('id')
  
      axios({
        method: 'PUT',
        url: `/api/my/posts/${postID}`,
        data: new FormData(e.target)
      }).then(function(response) {
        window.location.reload()
      }).catch(function(err) {
        console.log(err.response)
      })
    })
  })
  </script>